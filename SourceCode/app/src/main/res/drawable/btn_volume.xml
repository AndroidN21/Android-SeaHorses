<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" android:state_checked="true">
        <layer-list android:layout_width="wrap_content" android:layout_height="wrap_content">
            <!--Shadow-->
            <item android:top="3dp">
                <shape>
                    <corners android:radius="10dp" />
                    <solid android:color="@color/colorBtn_down_shadow" />
                </shape>
            </item>

            <item android:bottom="3dp" android:top="3dp">
                <shape>
                    <solid android:color="@color/colorBtn_down" />
                    <corners android:radius="10dp" />
                    <padding
                        android:bottom="10dp"
                        android:left="10dp"
                        android:right="10dp"
                        android:top="10dp" />
                </shape>
            </item>

            <item android:drawable="@drawable/ic_baseline_volume_up_24" android:top="3dp" android:bottom="3dp">
                <padding
                    android:bottom="10dp"
                    android:left="10dp"
                    android:right="10dp"
                    android:top="10dp" />
            </item>
        </layer-list>
    </item>
    <item android:state_pressed="true" android:state_checked="false">
        <layer-list android:layout_width="wrap_content" android:layout_height="wrap_content">
            <!--Shadow-->
            <item android:top="3dp">
                <shape>
                    <corners android:radius="10dp" />
                    <solid android:color="@color/colorBtn_shadow" />
                </shape>
            </item>

            <item android:bottom="3dp" android:top="3dp">
                <shape>
                    <solid android:color="@color/colorBackgroundBtn" />
                    <corners android:radius="10dp" />
                    <padding
                        android:bottom="10dp"
                        android:left="10dp"
                        android:right="10dp"
                        android:top="10dp" />
                </shape>
            </item>

            <item android:drawable="@drawable/ic_baseline_volume_up_24" android:top="3dp" android:bottom="3dp">
                <padding
                    android:bottom="10dp"
                    android:left="10dp"
                    android:right="10dp"
                    android:top="10dp" />
            </item>
        </layer-list>
    </item>
    <item android:state_checked="true">
        <layer-list>
            <!--Shadow-->
            <item>
                <shape>
                    <corners android:radius="10dp" />
                    <solid android:color="@color/colorBtn_down_shadow" />
                </shape>
            </item>

            <item android:bottom="5dp">
                <shape>
                    <solid android:color="@color/colorBtn_down" />
                    <corners android:radius="10dp" />
                    <padding
                        android:bottom="10dp"
                        android:left="10dp"
                        android:right="10dp"
                        android:top="10dp" />
                </shape>
            </item>

            <item android:drawable="@drawable/ic_baseline_volume_up_24" android:bottom="5dp">
                <padding
                    android:bottom="10dp"
                    android:left="10dp"
                    android:right="10dp"
                    android:top="10dp" />
            </item>
        </layer-list>
    </item>
    <item android:state_checked="false">
        <layer-list>
            <!--Shadow-->
            <item>
                <shape>
                    <corners android:radius="10dp" />
                    <solid android:color="@color/colorBtn_shadow" />
                </shape>
            </item>

            <item android:bottom="5dp">
                <shape>
                    <solid android:color="@color/colorBackgroundBtn" />
                    <corners android:radius="10dp" />
                    <padding
                        android:bottom="10dp"
                        android:left="10dp"
                        android:right="10dp"
                        android:top="10dp" />
                </shape>
            </item>

            <item android:drawable="@drawable/ic_baseline_volume_up_24"  android:bottom="5dp">
                <padding
                    android:bottom="10dp"
                    android:left="10dp"
                    android:right="10dp"
                    android:top="10dp" />
            </item>
        </layer-list>
    </item>
</selector>