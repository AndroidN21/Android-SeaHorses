<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <layer-list android:layout_width="wrap_content" android:layout_height="wrap_content">
            <!--Shadow-->
            <item android:top="3dp">
                <shape>
                    <corners android:radius="10dp" />
                    <solid android:color="@color/colorBtn2_Down_Shadow" />
                </shape>
            </item>

            <item android:bottom="3dp" android:top="3dp">
                <shape>
                    <solid android:color="@color/colorBtn2_Down" />
                    <corners android:radius="10dp" />

                </shape>
            </item>

            <item android:bottom="3dp" android:drawable="@drawable/ic_exit" android:top="3dp">

            </item>
        </layer-list>
    </item>
    <item>
        <layer-list>
            <!--Shadow-->
            <item>
                <shape>
                    <corners android:radius="10dp" />
                    <solid android:color="@color/colorBtn2_Down" />
                </shape>
            </item>

            <item android:bottom="5dp">
                <shape>
                    <solid android:color="@color/colorBtn2" />
                    <corners android:radius="10dp" />

                </shape>
            </item>

            <item android:bottom="5dp" android:drawable="@drawable/ic_exit"></item>
        </layer-list>
    </item>
</selector>