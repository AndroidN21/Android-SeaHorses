<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <layer-list android:layout_width="wrap_content" android:layout_height="wrap_content">
            <!--Shadow-->
            <item android:top="3dp">
                <shape>
                    <corners android:radius="10dp" />
                    <solid android:color="#D3D3D3" />
                </shape>
            </item>

            <item android:bottom="3dp" android:top="3dp">
                <shape>
                    <solid android:color="#FFFFFF" />
                    <corners android:radius="10dp" />
                    <padding
                        android:bottom="10dp"
                        android:left="10dp"
                        android:right="10dp"
                        android:top="10dp" />
                </shape>
            </item>
        </layer-list>
    </item>
    <item>
        <layer-list>
            <!--Shadow-->
            <item>
                <shape>
                    <corners android:radius="10dp" />
                    <solid android:color="#D3D3D3" />
                </shape>
            </item>

            <item android:bottom="5dp">
                <shape>
                    <solid android:color="#FFFFFF" />
                    <corners android:radius="10dp" />
                    <padding
                        android:bottom="10dp"
                        android:left="10dp"
                        android:right="10dp"
                        android:top="10dp" />
                </shape>
            </item>
        </layer-list>
    </item>
</selector>